#!/usr/bin/env php

<?php

require_once __DIR__ . '/../vendor/autoload.php';

use function cli\line;
use function cli\prompt;

function randomNumber () {   
    return rand(1,100);
}

function isEven ($num) {  

    if ($num % 2 === 0) {
        return true;        
    }

    else {
       return false;
    }    

}

function answer ($booleanEven) {
    
    $answer = '';

    if ($booleanEven === true) {
        $answer = 'yes';
    }

    else if ($booleanEven === false){
        $answer = 'no';
    }

    return $answer;
}

function game () {

    line('Welcome to the Brain Game!');

    $name = prompt('May I have your name?');
 
    line("Hello, %s!", $name);
    line("Answer 'yes' if number even otherwise answer 'no'.");

    $countRightAnswers = 0;

    while ($countRightAnswers < 3) {

    $randomNum = randomNumber();
    line("Question: {$randomNum}");
    $answerUser = prompt('Your answer');

    $booleanEven = isEven($randomNum);
    $correctAnswer = answer($booleanEven);

    if ($answerUser === $correctAnswer) {
        $countRightAnswers++;
        line("Correct!");
    }

    else {
        line("'$answerUser' is wrong answer ;(. Correct answer was '$correctAnswer'.\nLet's try again, {$name}!");
        break;
    }    
    }

    if ($countRightAnswers === 3) {
        line("Congratulations, {$name}!");
    } 

}


game();
